<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:keepScreenOn="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_vertical_marginkartu"
            android:layout_marginLeft="@dimen/activity_horizontal_marginkartu"
            android:layout_marginRight="@dimen/activity_horizontal_marginkartu"
            android:layout_marginTop="@dimen/activity_vertical_marginkartu"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/putih"
                app:cardCornerRadius="@dimen/sisilingkar"
                app:contentPadding="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="4dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/teks_namakomoditas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Nama Komoditas"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/ukuran16sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/teks_hargakomoditas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Rp 0,-"
                            android:textColor="@color/abu_teks_tebal500"
                            android:textSize="@dimen/ukuran16sp" />


                        <TextView
                            android:id="@+id/teks_alamatlokasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Alamat : "
                            android:textColor="@color/warnatekssubjudul"
                            android:textSize="@dimen/ukuran14sp" />

                        <TextView
                            android:id="@+id/teks_nomortelpon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Nomor Telepon : "
                            android:textColor="@color/warnatekssubjudul"
                            android:textSize="@dimen/ukuran14sp" />

                        <TextView
                            android:id="@+id/teks_lastupdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Lastupdate : "
                            android:textColor="@color/warnatekssubjudul"
                            android:textSize="@dimen/ukuran14sp" />

                        <TextView
                            android:id="@+id/teks_keterangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Keterangan : "
                            android:textColor="@color/warnatekssubjudul"
                            android:textSize="@dimen/ukuran14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.21"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:weightSum="1"
                        android:layout_gravity="center|center_vertical|center_horizontal">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/tombol_navigasi"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ikon_float_navigasi"
                            app:backgroundTint="@color/colorAccent"
                            app:elevation="0dp"
                            app:fabSize="mini"
                            android:layout_weight="0.23" />


                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/tombol_telepon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ikon_float_telepon"
                            app:backgroundTint="@color/colorAccent"
                            app:elevation="0dp"
                            app:fabSize="mini"
                            android:layout_weight="0.31" />


                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/tombol_sms"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ikon_float_sms"
                            app:backgroundTint="@color/colorAccent"
                            app:elevation="0dp"
                            app:fabSize="mini"
                            android:layout_weight="0.31" />


                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>