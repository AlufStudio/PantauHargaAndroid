<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:keepScreenOn="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_vertical_marginkartu"
            android:layout_marginLeft="@dimen/activity_horizontal_marginkartu"
            android:layout_marginRight="@dimen/activity_horizontal_marginkartu"
            android:layout_marginTop="@dimen/activity_vertical_marginkartu"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/putih"
                app:cardCornerRadius="@dimen/sisilingkar"
                app:contentPadding="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="4dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/teks_namakomoditas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@string/nama_komoditas"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/ukuran16sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/teks_hargakomoditas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/harga_komoditas"
                            android:textColor="@color/abu_teks_tebal500"
                            android:textSize="@dimen/ukuran16sp" />


                        <TextView
                            android:id="@+id/teks_alamatlokasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/alamat_komoditas"
                            android:textColor="@color/warnatekssubjudul"
                            android:textSize="@dimen/ukuran14sp" />

                        <TextView
                            android:id="@+id/teks_nomortelpon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/telepon_komoditas"
                            android:textColor="@color/warnatekssubjudul"
                            android:textSize="@dimen/ukuran14sp" />

                        <TextView
                            android:id="@+id/teks_lastupdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/last_update_komoditas"
                            android:textColor="@color/warnatekssubjudul"
                            android:textSize="@dimen/ukuran14sp" />

                        <TextView
                            android:id="@+id/teks_keterangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/keterangan_komoditas"
                            android:textColor="@color/warnatekssubjudul"
                            android:textSize="@dimen/ukuran14sp" />

                        <TextView
                            android:id="@+id/teks_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/rate_komoditas"
                            android:textColor="@color/warnatekssubjudul"
                            android:textSize="@dimen/ukuran14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical|center_horizontal"
                        android:layout_weight="0.15"
                        android:gravity="center|center_horizontal|clip_vertical|top"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/tombol_navigasi"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.23"
                            android:src="@drawable/ikon_float_navigasi"
                            app:backgroundTint="@color/colorAccent"
                            app:elevation="0dp"
                            app:fabSize="mini" />


                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/tombol_telepon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.31"
                            android:src="@drawable/ikon_float_telepon"
                            app:backgroundTint="@color/colorAccent"
                            app:elevation="0dp"
                            app:fabSize="mini" />


                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/tombol_sms"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.31"
                            android:src="@drawable/ikon_float_sms"
                            app:backgroundTint="@color/colorAccent"
                            app:elevation="0dp"
                            app:fabSize="mini" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/tombol_rating"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.23"
                            android:src="@drawable/ikon_float_rating"
                            app:backgroundTint="@color/colorAccent"
                            app:elevation="0dp"
                            app:fabSize="mini" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_share_white"
            app:backgroundTint="@color/hijauterang"
            app:fabSize="normal" />

    </RelativeLayout>


</LinearLayout>